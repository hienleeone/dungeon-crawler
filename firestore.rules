rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      match /attendance/{attId} {
        allow read, write: if request.auth != null && 
          (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      }
    }

    match /chatMessages/{msgId} {
      allow read, write: if request.auth != null;
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if
        request.resource.data.email is string &&
        request.resource.data.ingame is string &&
        request.resource.data.rating is int &&
        request.resource.data.comment is string &&
        request.resource.data.email.size() > 3 &&
        request.resource.data.ingame.size() > 2 &&
        request.resource.data.rating >= 1 && request.resource.data.rating <= 5;
      allow update, delete: if false;
    }
    
    match /players/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
        // Validate tên người chơi
        && request.resource.data.name is string
        && request.resource.data.name.size() >= 3
        && request.resource.data.name.size() <= 15;
      allow update: if request.auth != null && request.auth.uid == userId
        // Validate dữ liệu để chống hack
        && request.resource.data.lvl is int
        && request.resource.data.gold is number
        && request.resource.data.lvl >= 1
        && request.resource.data.lvl <= 1000
        && request.resource.data.gold >= 0
        && request.resource.data.gold <= 100000000
        // Tên không được thay đổi
        && request.resource.data.name == resource.data.name
        // Không cho phép tăng quá nhanh (so với dữ liệu cũ)
        && (
          !resource.data.keys().hasAll(['lvl', 'gold'])
          || (
            request.resource.data.lvl <= resource.data.lvl + 10
            && request.resource.data.gold <= resource.data.gold + 1000000
          )
        );
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /playerNames/{name} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    match /leaderboards/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}   