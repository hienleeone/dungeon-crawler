rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ======================================================
    // =============== PART 1 — GAME RULES ==================
    // ======================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ========= Players =========
    match /players/{userId} {

      // Anyone logged in can read players (leaderboard)
      allow read: if isAuthenticated();

      // Create new player with strict starting values
      allow create: if isOwner(userId)
        && request.resource.data.keys().hasAll(['name','lvl','gold','dungeon','allocated'])
        && request.resource.data.name is string
        && request.resource.data.name.size() >= 3
        && request.resource.data.name.size() <= 15
        && request.resource.data.lvl == 1
        && request.resource.data.gold == 0
        && request.resource.data.allocated == false
        && request.resource.data.dungeon is map;

      // Update but disallow editing critical fields
      allow update: if isOwner(userId)
        && request.resource.data.gold == resource.data.gold
        && request.resource.data.lvl == resource.data.lvl
        && request.resource.data.allocated == resource.data.allocated;

      // Delete
      allow delete: if isOwner(userId);
    }

    // ========= Player Settings =========
    match /players/{userId}/settings/{doc=**} {
      allow read, write: if isOwner(userId);
    }

    // ========= Player Attendance =========
    match /players/{userId}/attendance/{attId} {
      allow read, write: if isOwner(userId);
    }


    // ======================================================
    // ============= PART 2 — WEBSITE RULES =================
    // ======================================================

    // ========= Website Users =========
    match /users/{userId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
        && request.auth.uid == userId;

      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == userId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      // ----- Nested attendance -----
      match /attendance/{attId} {
        allow read, write: if request.auth != null &&
          (
            request.auth.uid == userId ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
          );
      }
    }

    // ========= Public Chat =========
    match /chatMessages/{msgId} {
      allow read, write: if request.auth != null;
    }

    // ========= Reviews =========
    match /reviews/{reviewId} {
      allow read: if true;

      // Only guests (not logged in) can submit reviews
      allow create: if request.auth == null &&
        request.resource.data.email is string &&
        request.resource.data.ingame is string &&
        request.resource.data.rating is int &&
        request.resource.data.text is string &&
        request.resource.data.email.size() > 3 &&
        request.resource.data.ingame.size() > 2 &&
        request.resource.data.rating >= 1 &&
        request.resource.data.rating <= 5;

      allow update, delete: if false;
    }


    // ======================================================
    // DENY EVERYTHING ELSE
    // ======================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
